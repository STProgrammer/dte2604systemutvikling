{% extends "layout.twig" %}
{% block content %}

    <section class="register_group" id="register_group">
        <section>
            {% if session.getFlashBag.has('header') %}
                <div class="container container_big_long text">
                    {% for header in session.getFlashBag.get('header', []) %}
                        <h6>{{ header }}</h6>
                    {% endfor %}
                    {% for message in session.getFlashBag.get('message', []) %}
                        <p>{{ message }}</p>
                    {% endfor %}
                </div>
            {% endif %}
        </section>
        <div class="openContainerNoBorder text" id="table_register">
            <h3>Lag ny bruker</h3>

            <div id="text">
                <form method="post" id="group_register_form">
                    <br><label>Gruppenavn: </label>
                    <br><input type="text" name="groupName" value="" placeholder="Gruppenavn" maxlength=45 required
                               id="groupName"/>
                    {% if user.isAdmin %}
                        <br><label>Admin eller vanlig gruppe: </label>
                        <br><input type="radio" name="isAdmin" value="1" required>
                        <label>Admin</label><br>
                        <input type="radio" name="isAdmin" value="0" required>
                        <label>Vanlig</label><br>
                    {% endif %}
                    <input type="hidden" value="{{ getMac("Group register") }}" name="XSRFPreventionToken">
                    <br><input type="submit" name="group_register" id="reg_btn" value="Ny gruppe">
                </form>
            </div>
            <button class="button miniButtons" onclick="goBack()">GÃ¥ tilbake</button>
        </div>
    </section>




{% endblock %}